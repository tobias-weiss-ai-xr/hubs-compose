#!/bin/bash
basedir=$(dirname "$0")/..
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    IP_ADDR=$(ip route get 1 | awk '{print $NF;exit}')
elif [[ "$OSTYPE" == "darwin"* ]]; then
    IP_ADDR=$(ifconfig -l | xargs -n1 ipconfig getifaddr)
fi
PRIVATE_NETWORK_IP=${IP_ADDR} mutagen-compose -f "$basedir"/docker-compose.hubs.yml down
PRIVATE_NETWORK_IP=${IP_ADDR} mutagen-compose -f "$basedir"/docker-compose.xwiki.yml down
PRIVATE_NETWORK_IP=${IP_ADDR} mutagen-compose -f "$basedir"/docker-compose.hugo.yml down
PRIVATE_NETWORK_IP=${IP_ADDR} mutagen-compose -f "$basedir"/docker-compose.haproxy.yml down
